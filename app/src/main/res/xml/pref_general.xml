<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_location"
        android:key="@string/key_pref_location"
        android:defaultValue="94043"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="Temperature Units"
        android:summary="%s"
        android:key="@string/temperature_unit"
        android:defaultValue="@string/metric"
        android:entries="@array/temperatureUnits"
        android:entryValues="@array/temperatureUnits"/>



</PreferenceScreen>